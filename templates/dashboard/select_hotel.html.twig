{% extends "base.html.twig" %}

{% block title %}Dashboard - Select Hotel{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .hotel-card-img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            border-radius: 0.375rem 0.375rem 0 0;
        }
        .hotel-card {
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .hotel-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">Available Hotels</h1>
            <div class="alert alert-info">
                <strong>Check-in:</strong> {{ check_in_date }} | 
                <strong>Check-out:</strong> {{ check_out_date }}
            </div>
        </div>
    </div>

    <div class="row mt-4">
        {% for hotel in hotels %}
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow-sm hotel-card">
                    {% if hotel.imageUrl %}
                        <img src="{{ hotel.imageUrl }}" class="hotel-card-img" alt="{{ hotel.name }}" loading="lazy">
                    {% else %}
                        <div class="hotel-card-img bg-secondary d-flex align-items-center justify-content-center">
                            <span class="text-white fs-1">üè®</span>
                        </div>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ hotel.name }}</h5>
                        <p class="card-text">{{ hotel.description }}</p>
                        <p class="card-text">
                            <small class="text-muted">üìç {{ hotel.address }}</small>
                        </p>
                        <p class="card-text">
                            <strong>Price per night:</strong> <span class="text-primary fw-bold">{{ hotel.pricePerNight }} TND</span>
                        </p>
                        <p class="card-text">
                            <strong>Available rooms:</strong>
                            {% if hotel.availableRooms > 0 %}
                                <span class="badge bg-success">{{ hotel.availableRooms }}</span>
                            {% else %}
                                <span class="badge bg-danger">No rooms available</span>
                            {% endif %}
                        </p>
                    </div>
                    <div class="card-footer bg-white border-top">
                        {% if hotel.availableRooms > 0 %}
                            <a href="{{ path('app_select_hotel', {'hotelId': hotel.id}) }}" class="btn btn-primary w-100">
                                Select Hotel
                            </a>
                        {% else %}
                            <button class="btn btn-secondary w-100" disabled>No Rooms Available</button>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-md-12">
                <div class="alert alert-warning">
                    No hotels available for the selected dates. Please try different dates.
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">Back to Cities</a>
        </div>
    </div>
</div>
{% endblock %}

